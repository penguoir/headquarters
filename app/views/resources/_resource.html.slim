.list-group-item.list-group-item-action
  .row.justify-content-between
    .col-9
      p.mb-0= link_to resource.title, resource, class: "font-weight-bold text-body"
      p.mb-0= resource.content.to_plain_text.truncate(100)

      - unless params[:controller] == 'users' && params[:action] == 'show'
        p.mb-0.text-muted
          | Uploaded by 
          = link_to resource.user.display_name, resource.user, class: "text-dark"

      - unless params[:controller] == 'projects'
        p.mb-0
          | In project: 
          = link_to resource.project.title, resource.project

    .col-3.text-right
      p.text-secondary
        | last updated
        = ' ' + time_ago_in_words(resource.project.updated_at) + ' '
        | ago


